<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <TextView
        android:id="@+id/tvuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:text="username: "
        android:textAppearance="?android:textAppearanceLarge" />

    <EditText
        android:id="@+id/etName1"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvuser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="-38dp"
        android:hint="Name"
        android:textAppearance="?android:textAppearanceLarge" />


    <TextView
        android:id="@+id/tvsearch_byName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvuser"
        android:text="Name: "
        android:textAppearance="?android:textAppearanceLarge" />

    <EditText
        android:id="@+id/etName2"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsearch_byName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="-41dp"
        android:hint="Name"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/tvsh"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_below="@+id/etName1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="148dp"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/tvsh2"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvsh"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="41dp"
        android:textAppearance="?android:textAppearanceLarge" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsh"
        android:layout_alignParentStart="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="187dp"
        android:onClick="Search"
        android:text="Search" />

    <Button
        android:id="@+id/btnSearchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsh2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:onClick="SearchName"
        android:text="Search by Name" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSearch"
        android:layout_alignParentStart="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="-51dp"
        android:onClick="Back"
        android:text="Back" />


</RelativeLayout>